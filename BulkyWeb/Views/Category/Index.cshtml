@model List<Category>


<div class="container">
    <div class="row pt-4 pb-3">
        <div class="co-6">
            <h2 class="text-dark">Category List</h2>
        </div>
        <div class="co-6 text-end">
            <a asp-action="Create" class="btn btn-dark">
                Create New Category
                <i class="bi bi-plus-circle"></i>
            </a>
        </div>
    </div>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Order</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td>@obj.Name</td>
                    <td>@obj.DisplayOrder</td>
                </tr>
            }
        </tbody>
    </table>
</div>
